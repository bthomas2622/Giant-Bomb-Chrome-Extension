{
  "manifest_version": 2,

  "name": "Giant Bomb Game Wiki Right-Click Search",
  "description": "This extension allows you to right-click highlighted word(s) in the chrome browser and search in the Giant Bomb Game Wiki",
  "version": "1.0",

  "browser_action": {
    "default_icon": "GB.png",
    "default_title": "Giant Bomb Wiki Search"
  },
  "permissions": [
    "activeTab", "contextMenus", "http://www.google.com/", "http://giantbomb.com/", "<all_urls>"
  ],
  "icons": {
    "16": "GB.png",
    "19": "GB.png",
    "38": "GB38.png",
    "48": "GB48.png",
    "128": "GB128.png"
  },
  "background": {
    "scripts": ["jquery-1.11.3.min.js", "eventpage.js"]
  }
}
